@keyframes console
    0%
        fill: $cl.gray
    100%
        fill: $cl.orange

.jn-job
    lost-flex-container row
    height 100%
    &--bookmarked
        .jn-job__action-bookmark
            fill orange
    &--console-active
        // TODO add classes for actions
        .jn-job__action-console
            animation console 1s infinite alternate ease-in-out
    &__info
        flex 0 0 auto
        display flex
        justify-content space-between
        align-items center
        padding-bottom 10px
    &__title
        display inline-block
        color: $cl.gray
        margin 0
    &__current
        padding 20px
        box-sizing border-box
        lost-flex-container column
        lost-column 2/3 flex
    &__tab-menu
        margin-bottom -1px
        & > button.jn-button-sm
            &--active
                background white 
            border-bottom none
    &__tab-content
        flex 0 0 auto
        max-height 170px
        overflow hidden
        padding 20px
        border 1px solid #eee
        overflow-y scroll
    &__builds
        animation slideIn .2s forwards ease-out
        overflow-y scroll
        position relative
        height 100%
        lost-column 1/3 flex
    &__change-set
        .jn-label
            transition border-color .3s ease-in-out
            border-color #eee
            &:hover
                border-color: inherit
    &__parameters
        inline-dl()
        dt
            color #999
            line-height 24px
        dd
            font-weight bold
            color: $cl.blue
    &__action
        @extend .jn-actions__action            
    &__actions
        @extend .jn-actions
        &--hidden 
            display none
    	&-list
            height 100%
    &-affected-paths
        font-size 12px
        &__modal
            .jn-modal__content
                padding 0
        &__icon
            margin-right 5px
            fill: $cl.blue
            &--add
                fill: $cl.green
            &--delete
                fill: $cl.red
        &__path
            word-break break-all
            background: $cl.light-gray
            padding 5px
            &:nth-child(odd)
                background: $cl.light-blue
    &__commit
        font-size 12px
        margin-bottom 5px
        display flex
        align-items center
        &-author
            text-align right
            margin-left auto
            color: $cl.gray
            font-weight bold
        &-msg
            margin-left 5px
            line-height 18px
        &-id
            user-select none
            cursor pointer
            font-weight bold
            min-width 75px
            border 1px solid
            color: $cl.blue
            fill: $cl.blue
    &-build
        position relative
        cursor pointer
        padding 10px
        border-left 5px solid transparent
        &--fade-in
            animation fadeIn .5s
        &:hover
            background #f7f7f7
        &--active
            background #f7f7f7
            span.jn-job-build__number
                font-weight bold
                font-size 24px
        &__number
            margin-bottom 5px
            font-size 16px
            display block
        &__date
            color #999
        &__progress
            @extend .jn-jobs-job__progress
        &__branch
            color white
            fill white
            border-radius 0 !important
            absolute right 0px top 0px
            // transform translateY(-50%)
            // top 50%
.jn-label
   border-radius 2px
   padding 2px 5px
   font-size 10px
   display inline-flex
   align-items center 
   svg.jn-icon
        margin-right 3px
for name, cl in $cl-build
    .jn-job-build__progress--{name}
        background cl
    .jn-job-build--{name}
        border-color cl
        .jn-job-build__branch
            background cl

.jn-console
    background #46525b
    position relative
    height 100%
    display flex
    box-sizing border-box
    font-family 'Monaco', 'Consolas', 'Courier', monospace
    color #f7f7f7
    font-size 11px
    line-height 16px
    &-wrapper
        height 100%
        width 100%
        overflow scroll
    &--hidden
        visibility hidden 
    &-output
        padding 20px
    &__tools
        absolute left 0 top 0
    &__tool
        .jn-icon
            vertical-align text-bottom
            width 13px
            height 13px
        background rgba(0,0,0,.5)
        cursor pointer
        padding 3px
        display block
        &-pin
            fill white
            &:hover:not(.jn-console__tool-pin--active)
                fill darken(white, 10%)
            &--active
                fill orange