.jn-button
    border 1px solid $app-color-gray
    color $app-color-gray
    background transparent
    cursor pointer
    font-size 14px
    padding 10px 15px
    border-radius 2px
    &:focus
        outline 0
    &:hover
        border-color darken($app-color-gray, 15%) 
        color darken($app-color-gray, 15%) 

.jn-button-sm
    @extend .jn-button
    padding 7px 12px
    font-size 12px
    
.jn-button-group
    margin-bottom 10px
    & > .jn-button,
    & > .jn-button-sm
        border-radius: 0
        &:not(:last-child)
            border-right: none

button-variant(variant, c)
    .jn-button-group
         .jn-button--{variant},
         .jn-button-sm--{variant}
            &.jn-button--active,
            &.jn-button-sm--active
                background c
                color white
            &:hover
                border-color transparent
                background lighten(c, 10%)
                color white
                   
    .jn-button--{variant},
    .jn-button-sm--{variant}
        background transparent
        border 1px solid c
        color c
        &:hover
            border-color darken(c, 15%) 
            color darken(c, 15%)  

button-variant('green', $cl.green)
button-variant('white', #999)
button-variant('blue', $cl.blue)